<div class="container-sm bg-dark px-0">
  <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="<%= "http://ddragon.leagueoflegends.com/cdn/img/champion/splash/#{@champion.name}_0.jpg" %>" class="d-block w-100 top-gradient" alt="...">
        <div class="container-fluid top-gradient"></div>
      </div>
      <div class="carousel-item">
        <img src="<%= "http://ddragon.leagueoflegends.com/cdn/img/champion/splash/#{@champion.name}_1.jpg" %>" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="<%= "http://ddragon.leagueoflegends.com/cdn/img/champion/splash/#{@champion.name}_2.jpg" %>" class="d-block w-100" alt="...">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleSlidesOnly" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleSlidesOnly" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <div class="px-3">
    <h1 class="display-4 my-2"><%= @champion.name %></h1>
    <section>
      <p class="small fw-light">
        <%= @champion.lore %>
      </p>
    </section>
  </div>
</div>